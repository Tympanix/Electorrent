{
  "name": "electorrent",
  "productName": "Electorrent",
  "version": "2.2.0",
  "description": "A thin client for your torrenting needs",
  "main": "app/app.js",
  "scripts": {
    "start": "electron --debug app",
    "build": "gulp build",
    "install": "bower install && gulp install",
    "postinstall": "electron-builder install-app-deps",
    "pack": "build --dir",
    "predist": "gulp build",
    "dist": "build",
    "prerelease": "gulp build",
    "release": "build"
  },
  "keywords": [
    "utorrent"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Tympanix/Electorrent.git"
  },
  "author": "Tympanix",
  "dependencies": {
    "electron-regedit": "^1.0.5",
    "q": "^1.4.1",
    "winreg": "^1.2.2"
  },
  "devDependencies": {
    "bower": "^1.8.2",
    "electron": "^1.7.11",
    "electron-builder": "^19.55.2",
    "electron-builder-squirrel-windows": "^19.55.2",
    "electron-connect": "^0.6.1",
    "electron-is": "^2.4.0",
    "electron-squirrel-startup": "^1.0.0",
    "gulp": "^3.9.1",
    "gulp-clean": "^0.3.2",
    "gulp-concat": "^2.6.1",
    "gulp-if": "^2.0.2",
    "gulp-less": "^3.3.2",
    "gulp-rename": "^1.2.2",
    "gulp-run": "^1.7.1",
    "gulp-useref": "^3.1.0",
    "merge-stream": "^1.0.1",
    "request": "^2.74.0",
    "run-sequence": "^1.2.2",
    "semver": "^5.3.0",
    "through2": "^2.0.3",
    "winston": "^2.2.0",
    "yargs": "^4.8.1"
  },
  "build": {
    "appId": "com.github.tympanix.electorrent",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "squirrel"
    },
    "linux": {
      "icon": "build/png",
      "category": "Network;FileTransfer;P2P;",
      "desktop": {
        "MimeType": "application/x-bittorrent;x-scheme-handler/magnet;",
        "Keywords": "p2p;bittorrent;"
      }
    },
    "extraFiles": [
      "resources"
    ],
    "fileAssociations": [
      {
        "ext": "torrent",
        "name": "Bittorrent Document",
        "role": "Viewer",
        "description": "Torrent Files"
      }
    ]
  }
}
